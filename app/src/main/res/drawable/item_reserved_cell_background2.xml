<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Gradient layer -->
    <item>
        <shape>
            <gradient
                android:startColor="#00E2FF"
                android:endColor="#9BF4FF"
                android:angle="270" />
            <corners android:radius="20dp" />
        </shape>
    </item>
    <!-- Solid layer -->
    <item android:left="10dp" android:top="10dp" android:right="10dp" android:bottom="5dp">
        <shape>
            <solid android:color="#9BF4FF" />
            <corners android:radius="15dp" />
        </shape>
    </item>
</layer-list>