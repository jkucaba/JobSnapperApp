<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#FF4081" /> <!-- Set the background color when the button is pressed -->
            <corners android:radius="8dp" /> <!-- Set the corner radius -->
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#BF0101"
                android:endColor="#F71E1E"
                android:angle="0" /> <!-- Set the default background color -->
            <corners android:radius="8dp" /> <!-- Set the corner radius -->
        </shape>
    </item>
</selector>